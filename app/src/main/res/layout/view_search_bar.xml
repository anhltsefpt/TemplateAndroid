<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <android.support.v7.widget.CardView
    android:id="@+id/mt_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@color/colorAccent"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <FrameLayout
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorDivider"
      android:focusable="true"
      android:focusableInTouchMode="true">

      <EditText
        android:id="@+id/search_editText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:layout_marginLeft="@dimen/padding_horizontal"
        android:layout_marginRight="@dimen/padding_horizontal"
        android:background="@drawable/background_search_edit_text"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="4dp"
        android:hint="@string/search_hint"
        android:imeOptions="flagNoExtractUi|actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/padding_horizontal"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="@dimen/text_primary_size"
        android:visibility="visible"
        android:layout_gravity="center"
        tools:ignore="RtlHardcoded" />
    </FrameLayout>
  </android.support.v7.widget.CardView>
</merge>
